                    </div>
                </div>
            </div>           
        </section>
        <!--VENTANA OCULTA DE AGREGAR ADOPCIONES-->
        <div class="bg-modal2">
            <div class="modal-content2">
                <div class="row">
                    <div class="col-12">
                        <h3>
                            <div id="text-action-title-popup">
                                Dar en Adopción
                            </div>
                        </h3>
                    </div>
                    <div class="col-12">
                        <form action="/add-adoption-vet" id="post-addadoption" method="post">
                            <div class="row">
                                <div class="col-12">
                                    <div class="form-group row">
                                        <label for ="add_idmascota" class="col-sm-4 col-form-label">Seleccionar Mascota</label>
                                        <div class="col-sm-8">
                                            <select id="add_idmascota" name="idmascota" class="form-select" onclick="nombrePet();"></select>
                                        </div>
                                        
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="form-group row">
                                        <label for ="add_nombremascota" class="col-sm-4 col-form-label">Nombre Mascota</label>
                                        <div class="col-sm-8">
                                            <input id="add_nombremascota" name="nombremascota" type="text" class="form-control" placeholder="Nombre mascota" aria-describedby="addon-wrapping" readonly>
                                        </div>
                                        
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="form-group row">
                                        <label for ="add_fecha" class="col-sm-4 col-form-label">Fecha</label>
                                        <div class="col-sm-8">
                                            <input id="add_fecha" name="fecha" type="date" class="form-control" placeholder="Fecha" aria-describedby="addon-wrapping">
                                        </div>
                                        
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="form-group row">
                                        <label for ="add_observacion" class="col-sm-4 col-form-label">Observación</label>
                                        <div class="col-sm-8">
                                            <input id="" name="observacion" type="text" class="form-control" placeholder="Observación de la mascota" aria-describedby="addon-wrapping">
                                        </div>        add_observacion
                                    </div>
                                </div>                    
                                <div class="col-12">
                                    <div class="form-group row">
                                        <label for ="add_estados" class="col-sm-4 col-form-label">Estado</label>
                                        <div class="col-sm-8">
                                            <input id="add_estados" name="estado" type="text" class="form-control" placeholder="" aria-describedby="addon-wrapping">
                                        </div>                                       
                                    </div>
                                </div>
                            </div>
                            <div class="col-12">
                                <button type="submit" id="add-adoption-button" class="btn btn-primary">
                                    <i class="fas fa-calendar-check"></i> Agregar Adopción
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="close2">+</div>
            </div>
        </div>
        <!--VENTANA OCULTA DE REVISAR SOLICITUDES DE ADOPCION-->
    <div class="bg-modal">
        <div class="modal-content2">
            <div class="row">
                <div class="col-12">
                    <h3>
                        <div id="text-action-title-popup">
                            Solicitudes de Adopción
                        </div>
                    </h3>
                </div>
                <div class="col-12">
                    <form action="/request-adoption-vet" id="post-editRequest" method="post">
                        <div class="row">
                            <div class="col input-group flex-nowrap">
                                <label for ="solicitante" class=" col-sm-4">Solicitante </label>
                            </div>
                            <div class="col input-group flex-nowrap">
                                <input id="solicitante" name="nombre_solicitante" type='text' class="form-control col-sm-6" placeholder="" aria-describedby="addon-wrapping">
                            </div>
                            <div class="col input-group flex-nowrap">
                                <select id="solicitante_respuesta"class="form-select form-select-sm col-sm-6" aria-label=".form-select-sm example">
                                    <option selected>Respuesta Solicitud</option>
                                    <option value="1">Aprobada</option>
                                    <option value="2">Rechazada</option>                               
                                </select>
                            </div>   
                        </div>
                        <div class="col-12">
                            <div class="row">
                                <div class="col">
                                    <button type="submit" id="request-adoption-button" class="btn btn-primary">
                                        Guardad Cambios
                                    </button>
                                </div>
                                <div class="col">
                                    <a class="btn btn-primary" href="/vet/adopcion" role="button"> Atras </a>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <div class="close">+</div>
        </div>
    </div>
    <script>
        const mascotas = <%-JSON.stringify(mascotas)%>;
        const adopciones = <%-JSON.stringify(adopciones)%>;
        const usuarios = <%-JSON.stringify(usuarios)%>;
        console.log(mascotas)
        console.log(adopciones)
        console.log(usuarios)

        function FillPageWithAdopts(adopciones) {
            let tBodyAdopcion = document.getElementById("tBody-vet-adopciones"); //Obten la tabla
            for (let i = 0; i < adopciones.length; i++) {
                const idmascota = adopciones[i].id;
                const nombremascota = [i].mascotum.nombre;
                const fechamascota = adopciones[i].fecha;
                const observacionmascota = adopciones[i].observacion;
                const estadomascota = adopciones[i].estado;
                
                let newControlRow = tBodyAdopcion.insertRow(-1);
                let newidColRef = newControlRow.insertCell(-1);
                let newNombreMascota = newControlRow.insertCell(-1);
                let newFechaColRef = newControlRow.insertCell(-1);
                let newObservacionColRef = newControlRow.insertCell(-1);               
                let newEstadoColRef = newControlRow.insertCell(-1);                
                let newSolicitudColRef = newControlRow.insertCell(-1);

                newidColRef.textContent = idmascota;
                newNombreMascota.textContent = nombremascota;
                newFechaColRef.textContent = fechamascota;
                newObservacionColRef.textContent = observacionmascota;
                newEstadoColRef.textContent = estadomascota;        
                newSolicitudColRef.innerHTML = '<button type="button" id=button-edit-' + i + ' onClick="answerRequestAdoptsPopup(this.id);" class="btn btn-primary pull-right"><i class="fas fa-edit"></i> Editar</button>';
            }
        }
        FillPageWithAdopts(adopciones);

        function answerRequestAdoptsPopup(user1) {
            var user2 = user1.split("-")
            document.getElementById('solicitante').value = usuarios[(parseInt(user2[2]))].nombrecompleto;
            document.getElementById('solicitante_respuesta').value = adopciones[(parseInt(user2[2]))].estado;

            document.querySelector(".bg-modal").style.display = "flex";
        }

        function fillCodePet(mascotas) {
            let selectidPet = document.getElementById('add_idmascota')
            for (let i = 0; i < mascotas.length; i++) {
                let optionpet = document.createElement('option')
                optionpet.text = mascotas[i].id;
                selectidPet.add(optionpet)
            }
        }
        fillCodePet(mascotas);

        function nombrePet() {
            var petactual = document.getElementById('add_idmascota').selectedIndex;
            document.getElementById('add_nombremascota').value = mascotas[petactual].nombre;
            console.log(petactual)
        }

        document.getElementById('agregar-adopcion-button').addEventListener('click',
            function() {
                document.querySelector('.bg-modal2').style.display = "flex";
                document.getElementById('add_idmascota').value = mascotas[0].nombre;
            });
        document.querySelector(".close2").addEventListener("click",
            function() {
                document.querySelector('.bg-modal2').style.display = "none";
                document.getElementById("add_nombremascota").value = ""
                document.getElementById("add_fecha").value = ""
                document.getElementById("add_observacion").value = ""
                document.getElementById("add_estados").value = ""
            });
        document.querySelector(".close").addEventListener("click",
            function() {
                document.querySelector('.bg-modal').style.display = "none";
            });
    </script>
    </body>
</html>