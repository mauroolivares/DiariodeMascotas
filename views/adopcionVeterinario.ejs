        <section id="content">
            <div class="container-fluid">
                <div class="row white-box-transparent">
                    <div class="col-12">
                        <!--Nombre usuario-->
                        <div class="row name-viewer-home">
                            <div id="nombreTitulo" class="col-6"></div>
                            <h3>Adopciones</h3>
                        </div>
                        <!-- boton agregar adopcion-->
                        <div class="col-12 text-right">
                            <div class="top-user-info">
                                <button id="agregar-adopcion-button" type="button" class="btn btn-primary">Agregar Adopción
                                    <i class="fas fa-plus"></i>
                                </button>
                            </div>
                        </div>
                        <!--A el usuario le aparecera una tabla con las adopciones -->
                        <div class="col-12">
                            <div class="table-responsive">
                                <table id="tabla-controles" class="table table-lifht table-bordered table-hover table-striped">
                                    <thead class="bg-dark text-white">
                                        <th scope="row">ID</th>
                                        <th scope="row">Mascota</th>
                                        <th scope="row">Fecha</th>
                                        <th scope="row">Observación</th>                      
                                        <th scope="row">Estado</th>
                                        <th scope="row">Observación</th>
