<!DOCTYPE html>
<html>
    <head>
        <title>Mis Mascotas</title>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <!-- CSS Sytlesheets -->
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
        <link rel="stylesheet" href="css/styles.css">
        <!--Bootstrap -->
        <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous">
        </script>
        <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.6.0/dist/umd/popper.min.js" integrity="sha384-KsvD1yqQ1/1+IA7gi3P0tyJcT3vR+NdBTt13hSJ2lnve8agRGXTTyNaBYmCR/Nwi" crossorigin="anonymous">
        </script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.min.js" integrity="sha384-nsg8ua9HAw1y0W1btsyWgBklPnCUAFLuTMS2G72MMONqmOymq585AcH49TLBQObG" crossorigin="anonymous">
        </script>
        <!-- Font Awesome -->
        <script src="https://kit.fontawesome.com/d82979872c.js" crossorigin="anonymous"></script>
        <!-- Font Google 1 Squada One -->
        <link rel="preconnect" href="https://fonts.gstatic.com">
        <link href="https://fonts.googleapis.com/css2?family=Squada+One&display=swap" rel="stylesheet">
    </head>
    <body>
        <section id="title">
            <h3>Mis Mascotas</h3>
        </section>
        <section id="content">
            <div class="container-fluid">
                <div class="row white-box-transparent">
                    <div class="col-12">
                        <!--Nombre usuario-->
                        <div class="row name-viewer-home">
                            <div id= "nombreUsuario" class="col-6"></div>
                            <!-- aca abro un script y agrego el nombre del usuario-->
                        </div>
                        <!-- boton agregar mascotas-->
                        <div class="col-12 text-right">
                            <div class="top-mascotas-info">
                                <button id="agregar-mascota-button" type="button" class="btn btn-primary">Agregar Mascota
                                    <i class="fas fa-plus"></i>
                                </button>
                            </div>
                        </div>
                        <!--Lo que puede ver el usuario de sus mascotas-->
                        <div class="col-12">
                            <div class="table-responsive">
                                <table id="tabla-mascotas" class="table table-lifht table-bordered table-hover table-striped">
                                    <thead class="bg-dark text-white">
                                        <th scope="row">ID</th>
                                        <th scope="row">Nombre</th>
                                        <th scope="row">Especie</th>
                                        <th scope="row">Raza</th>
                                        <th scope="row">Color</th>
                                        <th scope="row">Controles</th>
                                        <th scope="row">Editar</th>
                                    </thead>
                                    <tbody id="tBody-mascotas"></tbody>                
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <section id="agregar-mascotas">
            <div class="bg-modal2">
                <div class="modal-content2">
                    <div class="row">
                        <div class="col-12">
                            <h3>
                                <div id="text-action-title-popup">
                                Agregar Mascota
                                </div>
                            </h3>
                        </div>
                        <div class="col-12">
                            <form action="/add-new-mascota" method="post">
                                <div class="row">
                                    <div class="col-12">
                                        <div class="input-group flex-nowrap">
                                            <span class="input-group-text" id="addon-wrapping">Nombre</span>
                                            <input id="add_nombre" name="nombre" type="text" class="form-control" placeholder="Nombre Mascota" aria-label="nombre_mascota_add" aria-describedby="addon-wrapping">
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <div class="input-group flex-nowrap">
                                            <span class="input-group-text" id="addon-wrapping">Especie</span>
                                            <input id="especie_mascota_input_popup" name="especie_nueva_mascota" type="text" class="form-control" placeholder="Especie Mascota" aria-label="especie_mascota_add" aria-describedby="addon-wrapping">
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <div class="input-group flex-nowrap">
                                            <span class="input-group-text" id="addon-wrapping">Raza</span>
                                            <input id="raza_mascota_input_popup" name="raza_nueva_mascota" type="text" class="form-control" placeholder="Raza Mascota" aria-label="raza_mascota_add" aria-describedby="addon-wrapping">
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <div class="input-group flex-nowrap">
                                            <span class="input-group-text" id="addon-wrapping">Color</span>
                                            <input id="color_mascota_input_popup" name="color_nueva_mascota" type="text" class="form-control" placeholder="Color Mascota" aria-label="color_mascota_add" aria-describedby="addon-wrapping">
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <div class="input-group flex-nowrap">
                                            <span class="input-group-text" id="addon-wrapping">Chip ID</span>
                                            <input id="chip_mascota_input_popup" name="chip_nueva_mascota" type="text" class="form-control" placeholder="Chip ID Mascota" aria-label="chip_mascota_add" aria-describedby="addon-wrapping">
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <div class="input-group flex-nowrap">
                                            <span class="input-group-text" id="addon-wrapping">Fecha de Nacimiento</span>
                                            <input id="fnacimiento_mascota_input_popup" name="fnacimiento_nueva_mascota" type="date" class="form-control" placeholder="Fecha de Nacimiento Mascota" aria-label="fnacimiento_mascota_add" aria-describedby="addon-wrapping">
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <div class="input-group flex-nowrap">
                                            <span class="input-group-text" id="addon-wrapping">Estado</span>
                                            <select id="estado_mascota_input_popup" name="estado_new_mascota" class="form-select" aria-label="Estado Mascota">
                                                <option value= true>Activo</option>
                                                <!--<option value= false>Inactivo</option>-->
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <button type="submit" id="add-mascota-button-popup" class="btn btn-primary">
                                        <div id="contentButton-addMascota">
                                            <i class="fas fa-plus"></i>
                                            Agregar Mascota
                                        </div>
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                    <div class="close2">+</div>
                </div>
            </div>
        </section>
        <section id="editar-mascota">
            <div class= "big-modal">
                <div class="modal-content2">
                    <div class="row">
                        <div class="col-12">
                            <h3>
                                <div id="text-action-title-popup">
                                    Editar Mascota
                                </div>
                            </h3>
                        </div>
                        <div class="col-12">
                            <form action="/editar-mascota-usuario" method="post">
                                <div class="row">           
                                    <div class="col-12">
                                        <div class="input-group flex-nowrap">
                                            <span class="input-group-text" id="addon-wrapping">Nombre Mascota</span>
                                            <input id="edit_nombre" name="nombre" type="text" class="form-control" placeholder="Nombre Mascota" aria-label="nombre_mascota_add" aria-describedby="addon-wrapping">
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <div class="input-group flex-nowrap">
                                            <span class="input-group-text" id="addon-wrapping">Especie Mascota</span>
                                            <input id="edit_especie_mascota_input_popup" name="especie_edit_mascota" type="text" class="form-control" placeholder="Especie Mascota" aria-label="especie_mascota_add" aria-describedby="addon-wrapping" readonly>
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <div class="input-group flex-nowrap">
                                            <span class="input-group-text" id="addon-wrapping">Raza Mascota</span>
                                            <input id="edit_raza_mascota_input_popup" name="raza_edit_mascota" type="text" class="form-control" placeholder="Raza Mascota" aria-label="raza_mascota_add" aria-describedby="addon-wrapping">
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <div class="input-group flex-nowrap">
                                            <span class="input-group-text" id="addon-wrapping">Color Mascota</span>
                                            <input id="edit_color_mascota_input_popup" name="color_edit_mascota" type="text" class="form-control" placeholder="Color Mascota" aria-label="color_mascota_add" aria-describedby="addon-wrapping">
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <div class="input-group flex-nowrap">
                                            <span class="input-group-text" id="addon-wrapping">Fecha de Nacimiento</span>
                                            <input id="edit_fnacimiento_mascota_input_popup" name="fnacimiento_edit_mascota" type="text" class="form-control" placeholder="Fecha de Naciemiento Mascota" aria-label="fnacimiento_mascota_add" aria-describedby="addon-wrapping">
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <div class="input-group flex-nowrap">
                                            <span class="input-group-text" id="addon-wrapping">Chip ID</span>
                                            <input id="edit_chip_mascota_input_popup" name="chip_edit_mascota" type="text" class="form-control" placeholder="ID Mascota" aria-label="chip_mascota_add" aria-describedby="addon-wrapping" readonly>
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <div class="input-group flex-nowrap">
                                            <span class="input-group-text" id="addon-wrapping">Estado</span>
                                            <select id="edit_estado_mascota_input_popup" name="estado_edit_mascota" class="form-select" aria-label="Estado Mascota">
                                                <option value= true >Activo</option>
                                                <option value= false >Inactivo</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <button type="submit" id="edit-mascota-button" class="btn btn-primary">
                                        <div id="contentButton-addMascota">
                                            <i class="far fa-save"></i> 
                                                Guardar Cambios
                                        </div>
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                    <div class="close">+</div>
                </div>
            </div>
        </section>

        <script>
            //Cuando se haga click al boton agregar en nueva mascota
            document.getElementById("agregar-mascota-button").addEventListener("click",
            function(){
                document.querySelector(".bg-modal2").style.display = "flex";
            });//activar panel

            //Al hacer click en close2 se cerrara el modal2 y se vaciaran los campos que contiene este.
            document.querySelector(".close2").addEventListener("click",
            function() {
                document.querySelector('.bg-modal2').style.display = "none";
                document.getElementById('nombre').value = "";
                document.getElementById('especie_mascota_input_popup').value = "";
                document.getElementById('raza_mascota_input_popup').value = "";
                document.getElementById('color_mascota_input_popup').value = "";
                document.getElementById('chip_mascota_input_popup').value = "";
                document.getElementById('fnacimiento_mascota_input_popup').value = "";
                document.getElementById('estado_mascota_input_popup').selectedIndex = 0
            });
        </script>
    </body>
</html>