            </div>
        </nav>
    </section>
    <section id="content">
        <div class="container-fluid">
            <div class="row white-box-transparent">
                <div class="col-12">
                    <!--Nombre usuario-->
                    <div class="row name-viewer-home">
                        <div id="nombreUsuario" class="col-6"></div>
                        <!-- aca abro un script y agrego el nombre del usuario-->
                        <h3>Mis Controles</h3>
                    </div>
                    <!-- boton agregar control-->
                    <div class="col-12 text-right">
                        <div class="top-user-info">
                            <button id="agregar-control-button" type="button" class="btn btn-primary">Registrar Control
                                <i class="fas fa-plus"></i>
                            </button>
                        </div>
                    </div>
                    <!--A el usuario le aparecera una tabla con los controles de sus mascotas. Tendra opcion de ver, editar y controles -->
                    <div class="col-12">
                        <div class="table-responsive">
                            <table id="tabla-controles" class="table table-lifht table-bordered table-hover table-striped">
                                <thead class="bg-dark text-white">
                                    <th scope="row">ID</th>
                                    <th scope="row">Fecha</th>
                                    <th scope="row">Peso</th>
                                    <th scope="row">Temperatura</th>
                                    <th scope="row">Vacuna(s)</th>
                                    <th scope="row">Estado</th>
                                    <th scope="row">Observación</th>
                                    <th scope="row">Editar</th>
                                </thead>
                                <tbody id="tBody-controles"></tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!--VENTANA OCULTA DE REGISTRAR CONTROL-->
    <div class="bg-modal2">
        <div class="modal-content2">
            <div class="row">
                <div class="col-12">
                    <h3>
                        <div id="text-action-title-popup">
                            Nuevo Control
                        </div>
                    </h3>
                </div>
                <div class="col-12">
                    <form action="/addControl" method="post">
                        <div class="row">
                            <div class="col-12">
                                <div class="input-group flex-nowrap">
                                    <span class="input-group-text" id="addon-wrapping">Seleccionar Mascota</span>
                                    <select id="add_idmascota" name="idmascota" class="form-select" onclick="nombrePet();"></select>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="input-group flex-nowrap">
                                    <span class="input-group-text placeholder col-3" id="addon-wrapping">Nombre mascota</span>
                                    <input id="add_nombremascota" name="nombremascota" type="text" class="form-control" placeholder="Nombre mascota" aria-describedby="addon-wrapping" readonly>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="input-group flex-nowrap">
                                    <span class="input-group-text placeholder col-3" id="addon-wrapping">Fecha</span>
                                    <input id="add_fecha" name="fecha" type="date" class="form-control" placeholder="Fecha del control" aria-describedby="addon-wrapping">
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="input-group flex-nowrap">
                                    <span class="input-group-text placeholder col-3" id="addon-wrapping">Peso</span>
                                    <input id="add_peso" name="peso" type="text" class="form-control" placeholder="Peso" aria-describedby="addon-wrapping">
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="input-group flex-nowrap">
                                    <span class="input-group-text placeholder col-3" id="addon-wrapping">Temperatura</span>
                                    <input id="add_temperatura" name="temperatura" type="text" class="form-control" placeholder="Temperatura" aria-describedby="addon-wrapping">
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="input-group flex-nowrap">
                                    <span class="input-group-text placeholder col-3" id="addon-wrapping">Vacuna(s)</span>
                                    <input id="add_vacuna" name="vacuna" type="text" class="form-control" placeholder="" aria-describedby="addon-wrapping">
                                </div>
                            </div>

                            <div class="col-12">
                                <div class="input-group flex-nowrap">
                                    <span class="input-group-text placeholder col-3" id="addon-wrapping">Estado</span>
                                    <input id="add_estados" name="estado" type="text" class="form-control" placeholder="" aria-describedby="addon-wrapping">
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="input-group flex-nowrap">
                                    <span class="input-group-text placeholder col-3" id="addon-wrapping">Observación</span>
                                    <input id="add_observacion" name="observacion" type="text" class="form-control" placeholder="Agrege observaciones finales" aria-describedby="addon-wrapping">
                                </div>
                            </div>
                        </div>
                        <div class="col-12">
                            <button type="submit" id="add-usuario-admin-button" class="btn btn-primary">
                                <i class="fas fa-calendar-check"></i> Agregar Control
                            </button>
                        </div>
                    </form>
                </div>
            </div>
            <div class="close2">+</div>
        </div>
    </div>
    <!--VENTANA OCULTA DE EDITAR CONTROL-->
    <div class="bg-modal">
        <div class="modal-content2">
            <div class="row">
                <div class="col-12">
                    <h3>
                        <div id="text-action-title-popup">
                            Editar Control
                        </div>
                    </h3>
                </div>
                <div class="col-12">
                    <form action="/editControl" method="post">
                        <div class="row">
                            <div class="col-12">
                                <div class="input-group flex-nowrap">
                                    <span class="input-group-text placeholder col-3" id="addon-wrapping">Fecha</span>
                                    <input id="edit_fecha" name="fecha" type='date' class="form-control" placeholder="Fecha del control" aria-describedby="addon-wrapping">
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="input-group flex-nowrap">
                                    <span class="input-group-text placeholder col-3" id="addon-wrapping">Peso</span>
                                    <input id="edit_peso" name="peso" type="text" class="form-control" placeholder="Peso" aria-describedby="addon-wrapping">
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="input-group flex-nowrap">
                                    <span class="input-group-text placeholder col-3" id="addon-wrapping">Temperatura</span>
                                    <input id="edit_temperatura" name="temperatura" type="text" class="form-control" placeholder="Temperatura" aria-describedby="addon-wrapping">
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="input-group flex-nowrap">
                                    <span class="input-group-text placeholder col-3" id="addon-wrapping">Vacuna(s)</span>
                                    <input id="edit_vacuna" name="vacuna" type="date" class="form-control" placeholder="" aria-describedby="addon-wrapping">
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="input-group flex-nowrap">
                                    <span class="input-group-text placeholder col-3" id="addon-wrapping">Estado</span>
                                    <input id="edit_estados" name="estado" type="text" class="form-control" placeholder="" aria-describedby="addon-wrapping">
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="input-group flex-nowrap">
                                    <span class="input-group-text placeholder col-3" id="addon-wrapping">Observación</span>
                                    <input id="edit_observacion" name="observacion" type="text" class="form-control" placeholder="" aria-describedby="addon-wrapping">
                                </div>
                            </div>
                        </div>
                        <div class="col-12">
                            <button type="submit" id="add-usuario-admin-button" class="btn btn-primary">
                                <i class="fas fa-calendar-check"></i> Guardad Cambios
                            </button>
                        </div>
                    </form>
                </div>
            </div>
            <div class="close">+</div>
        </div>
    </div>
    <script>
        const controles = <%-JSON.stringify(controles)%>;

        const mascotas = <%-JSON.stringify(mascotas)%>;

        console.log(controles)
        console.log(mascotas)

        function FillPageWithControls(controles) {
            let tBodyControles = document.getElementById("tBody-controles"); //Obten la tabla
            for (let i = 0; i < controles.length; i++) {
                const idcontrol = controles[i].id
                const fechaControl = controles[i].fecha;
                const pesoControl = controles[i].peso;
                const temperaturaControl = controles[i].temperatura;
                const vacunaControl = controles[i].vacuna;
                const estadoControl = controles[i].estado;
                const observacionControl = controles[i].observacion;

                //Inserta una nueva fila en la tabla 
                let newControlRow = tBodyControles.insertRow(-1);
                let newidColRef = newControlRow.insertCell(-1);
                //Crea celdas o columna para la I-esima columna, esto hace referencia a
                let newFechaColRef = newControlRow.insertCell(-1);
                //let newMascotaColRef = newControlRow.insertCell(-1);              
                let newPesoColRef = newControlRow.insertCell(-1);
                let newTemperaturaColRef = newControlRow.insertCell(-1);
                let newVacunaColRef = newControlRow.insertCell(-1);
                let newEstadoColRef = newControlRow.insertCell(-1);
                let newObservacionColRef = newControlRow.insertCell(-1);
                //Crea celdas o columna para la I-esima columna, esto hace referencia a boton editar
                let newEditarColRef = newControlRow.insertCell(-1);

                //Asigna los valores a cada columna
                newidColRef.textContent = idcontrol;
                newFechaColRef.textContent = fechaControl;
                newPesoColRef.textContent = pesoControl;
                newTemperaturaColRef.textContent = temperaturaControl;
                newVacunaColRef.textContent = vacunaControl;
                newEstadoColRef.textContent = estadoControl;
                newObservacionColRef.textContent = observacionControl;
                newEditarColRef.innerHTML = '<button type="button" id=button-edit-' + i + ' onClick="editControlPopup(this.id);" class="btn btn-primary pull-right"><i class="fas fa-edit"></i> Editar</button>';
            }
        }
        FillPageWithControls(controles);

        function fillCodePet(mascotas) {
            let selectidPet = document.getElementById('add_idmascota')

            for (let i = 0; i < mascotas.length; i++) {

                let optionpet = document.createElement('option')
                optionpet.text = mascotas[i].id;
                selectidPet.add(optionpet)
            }
        }
        fillCodePet(mascotas);

        function nombrePet() {
            var petactual = document.getElementById('add_idmascota').selectedIndex;
            document.getElementById('add_nombremascota').value = mascotas[petactual].nombre;
            console.log(petactual)
        }
        //Activar panel registrar control
        document.getElementById('agregar-control-button').addEventListener('click',
            function() {
                document.querySelector('.bg-modal2').style.display = "flex";
                document.getElementById('add_nombremascota').value = mascotas[0].nombre;
            });
        //Desactivar panel registrar control
        document.querySelector('.close2').addEventListener('click',
            function() {
                document.querySelector('.bg-modal2').style.display = 'none';
                document.getElementById("add_fecha").value = ""
                document.getElementById("add_peso").value = ""
                document.getElementById("add_temperatura").value = ""
                document.getElementById("add_vacuna").value = ""
                document.getElementById("add_estados").value = ""
                document.getElementById("add_observacion").value = ""

            });
        //Activar panel editar control    
        function editControlPopup(user1) {
            var user2 = user1.split("-")
            document.getElementById('edit_fecha').value = controles[(parseInt(user2[2]))].fecha;
            document.getElementById('edit_peso').value = controles[(parseInt(user2[2]))].peso;
            document.getElementById('edit_temperatura').value = controles[(parseInt(user2[2]))].temperatura;
            document.getElementById('edit_vacuna').value = controles[(parseInt(user2[2]))].vacuna;
            document.getElementById('edit_estados').value = controles[(parseInt(user2[2]))].estado;
            document.getElementById('edit_observacion').value = controles[(parseInt(user2[2]))].observacion;

            document.querySelector(".bg-modal").style.display = "flex";
        }
        //Desactivar panel editar control
        document.querySelector(".close").addEventListener("click",
            function() {
                document.querySelector('.bg-modal').style.display = "none";
            });
    </script>
</body>

</html>