<!DOCTYPE html>
<html>

<head>
    <title>Diario de Mascotas</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- CSS Sytlesheets -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <link rel="stylesheet" href="../styles.css">
    <!--Bootstrap -->
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous">
    </script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.6.0/dist/umd/popper.min.js" integrity="sha384-KsvD1yqQ1/1+IA7gi3P0tyJcT3vR+NdBTt13hSJ2lnve8agRGXTTyNaBYmCR/Nwi" crossorigin="anonymous">
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.min.js" integrity="sha384-nsg8ua9HAw1y0W1btsyWgBklPnCUAFLuTMS2G72MMONqmOymq585AcH49TLBQObG" crossorigin="anonymous">
    </script>
    <!-- Font Awesome -->
    <script src="https://kit.fontawesome.com/d82979872c.js" crossorigin="anonymous"></script>
    <!-- Font Google Lora -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Lora:wght@700&display=swap" rel="stylesheet">
</head>

<body>
    <section id="title">
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container-fluid">
                <a class="navbar-brand" href="#">Diario de Mascotas</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="/profile">Inicio</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link active dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Opciones
                                </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <li><a class="dropdown-item" href="/profile">Mis Datos</a></li>
                                <li><a class="dropdown-item" href="/profile/pets">Mis Mascotas</a></li>
                                <li><a class="dropdown-item" href="/#">Controles</a></li>
                                <li><a class="dropdown-item" href="/#">Adopción</a></li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" active href="/">Cerrar Sesión</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </section>
    <section id="info-adopciones">
        <div class="container-fluid">
            <div class="row">
                <div class="name-viewer-home col-lg-6 col-md-4 col-sm-6">
                    <div class="col-12">
                        <h3>Adopciones</h3>
                    </div>
                </div>
                <!--Aca se despliega todos los usuarios registrados-->
                <div class="col-12">
                    <div class="container-fluid">
                        <div class="row white-box-transparent">
                            <div class="col-12">
                                <div class="table-responsive">
                                    <table id="tabla-adopciones" class="table table-light table-bordered table-hover table-striped">
                                        <thead class="bg-dark text-white">
                                            <th scope="row">Nombre</th>
                                            <th scope="row">Especie</th>
                                            <th scope="row">Sexo</th>
                                            <th scope="row">Fecha de nacimiento</th>
                                            <th scope="row">Institución</th>
                                            <th scope="row">Solicitar adopción</th>
                                        </thead>
                                        <tbody id="tbody-tabla-adopciones"></tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!--formulario -->
    <div class="bg-modal2">
        <div class="modal-content2">
            <div class="row">
                <div class="col-12">
                    <h3>
                        <div id="text-action-title-popup">
                            Solicitar Adopción
                        </div>
                    </h3>
                </div>
                <div class="col-12">
                    <form action="/profile/adopt" method="post">
                        <div class="row">
                            <div class="col-12">
                                <div class="input-group flex-nowrap">
                                    <span class="input-group-text placeholder col-3" id="addon-wrapping">Nombre completo</span>
                                    <input id="request_nombre" name="nombrecompleto" type="text" class="form-control" placeholder="Nombre completo" aria-describedby="addon-wrapping">
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="input-group flex-nowrap">
                                    <span class="input-group-text placeholder col-3" id="addon-wrapping">Correo electrónico</span>
                                    <input id="request_correo_admin" name="correo" type="email" class="form-control" placeholder="Correo electrónico" aria-describedby="addon-wrapping">
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="input-group flex-nowrap">
                                    <span class="input-group-text placeholder col-3" id="addon-wrapping">Teléfono</span>
                                    <input id="request_telefono" name="telefono" type="text" class="form-control" placeholder="9XXXXXXXX" aria-describedby="addon-wrapping">
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="input-group flex-nowrap">
                                    <span class="input-group-text placeholder col-3" id="addon-wrapping">Dirección</span>
                                    <input id="request_direccion" name="direccion" type="text" class="form-control" placeholder="Dirección" aria-describedby="addon-wrapping">
                                </div>
                            </div>
                        </div>
                        <div class="col-12">
                            <button type="submit" id="add-solicitud-button" class="btn btn-primary">
                                <i class="fas fa-save"></i> Solicitar Adopción
                            </button>
                        </div>
                    </form>
                </div>
            </div>
            <div class="close2">+</div>
        </div>
        <script>
            document.querySelector(".close2").addEventListener("click",
                function() {
                    document.querySelector('.bg-modal2').style.display = "none";
                    document.getElementById("request_nombre").value = ""
                    document.getElementById("request_correo").value = ""
                    document.getElementById("request_telefono").value = ""
                    document.getElementById("request_direccion").value = ""
                });
        </script>
</body>

</html>