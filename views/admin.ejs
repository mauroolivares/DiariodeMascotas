<!DOCTYPE html>
<html>

<head>
    <title>Administrador</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- CSS Sytlesheets -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <link rel="stylesheet" href="css/styles.css">
    <!--Bootstrap -->
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous">
    </script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.6.0/dist/umd/popper.min.js" integrity="sha384-KsvD1yqQ1/1+IA7gi3P0tyJcT3vR+NdBTt13hSJ2lnve8agRGXTTyNaBYmCR/Nwi" crossorigin="anonymous">
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.min.js" integrity="sha384-nsg8ua9HAw1y0W1btsyWgBklPnCUAFLuTMS2G72MMONqmOymq585AcH49TLBQObG" crossorigin="anonymous">
    </script>
    <!-- Font Awesome -->
    <script src="https://kit.fontawesome.com/d82979872c.js" crossorigin="anonymous"></script>
    <!-- Font Google 1 Squada One -->
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Squada+One&display=swap" rel="stylesheet">
</head>

<body>
    <section id="title">
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container-fluid">
                <a class="navbar-brand" href="#">Administración Diario de Mascotas</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="/admin">Inicio</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link active dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Opciones
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <li><a class="dropdown-item" href="/#">Usuarios</a></li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/">Cerrar Sesión</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </section>
    <section id="info-usuarios">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-6 col-md-6 col-sm-6">
                    <div class="top-user-info">
                        <h3>Usuarios</h3>
                    </div>
                </div>
                <!--Boton agregar usuario-->
                <div class="col-lg-6 col-md-4 col-sm-6 text-right">
                    <div id="add_user_button" class="top-user-info">
                        <button type="button" class="btn btn-primary">
                            <i class="fas fa-plus"></i>Nuevo Usuario
                        </button>
                    </div>
                </div>
                <!--Aca se despliega todos los usuarios registrados-->
                <div class="col-12">
                    <div class="container-fluid">
                        <div class="row white-box-transparent">
                            <div class="col-12">
                                <div class="table-responsive">
                                    <table id="tabla-usuarios" class="table table-bordered table-light table-hover table-striped">
                                        <thead class="bg-dark text-white">
                                            <th scope="row">Rut</th>
                                            <th scope="row">Nombre</th>
                                            <th scope="row">Correo electrónico</th>
                                            <th scope="row">Fecha de naciemiento</th>
                                            <th scope="row">Tipo de usuario</th>
                                            <th scope="row">Ver</th>
                                            <th scope="row">Editar</th>
                                        </thead>
                                        <tbody id="tbody-tabla-usuarios"></tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section id="agregar-usuarios">
        <div class="bg-modal2">
            <div class="modal-content2">
                <div class="row">
                    <div class="col-12">
                        <h3><div id="text-action-title-popup">Nuevo Usuario</div></h3>
                    </div>
                    <div class="col-12">
                        <form action="/" method="post">
                            <div class="row">
                                <div class="col-12">
                                    <div class="input-group flex-nowrap">
                                        <span class="input-group-text" id="addon-wrapping">Rut</span>
                                        <input id="add_rut_admin" name="rut" type="text" class="form-control" placeholder="Rut Usuario" aria-describedby="addon-wrapping">
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="input-group flex-nowrap">
                                        <span class="input-group-text" id="addon-wrapping">Nombre</span>
                                        <input id="add_nombre_admin" name="nombrecompleto" type="text" class="form-control" placeholder="Nombre Usuario" aria-describedby="addon-wrapping">
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="input-group flex-nowrap">
                                        <span class="input-group-text" id="addon-wrapping">Correo Electrónico</span>
                                        <input id="add_correo_admin" name="correo" type="email" class="form-control" placeholder="Correo Electrónico Usuario" aria-describedby="addon-wrapping">
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="input-group flex-nowrap">
                                        <span class="input-group-text" id="addon-wrapping">Fecha de Nacimiento</span>
                                        <input id="add_fechanacimiento_admin" name="fechanacimiento" type="date" class="form-control" placeholder="Fecha Nacimiento Usuario" aria-describedby="addon-wrapping">
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="input-group flex-nowrap">
                                        <span class="input-group-text" id="addon-wrapping">Tipo de Usuario</span>
                                        <select id="add_tipo_admin" name="tipo" type="text" class="form-control" placeholder="Tipo de Usuario" aria-describedby="addon-wrapping">
                                            <option>Dueno</option>
                                            <option>Veterinario</option>
                                            <option>Institución</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="input-group flex-nowrap">
                                        <span class="input-group-text" id="addon-wrapping">Teléfono</span>
                                        <input id="add_telefono_admin" name="telefono" type="text" class="form-control" placeholder="Fecha Nacimiento Usuario" aria-describedby="addon-wrapping" >
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="input-group flex-nowrap">
                                        <span class="input-group-text" id="addon-wrapping">Dirección</span>
                                        <input id="add_direccion_admin" name="direccion" type="text" class="form-control" placeholder="Fecha Nacimiento Usuario" aria-describedby="addon-wrapping" >
                                    </div>
                                </div>
                                <div class="col-12"> <!--que diferencia tiene ubicacion con direccion-->
                                    <div class="input-group flex-nowrap">
                                        <span class="input-group-text" id="addon-wrapping">Ubicación</span>
                                        <input id="add_ubicacion_admin" name="ubicacion" type="text" class="form-control" placeholder="Fecha Nacimiento Usuario" aria-describedby="addon-wrapping" >
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="input-group flex-nowrap">
                                        <span class="input-group-text" id="addon-wrapping">Descripción</span>
                                        <input id="add_descripcion_admin" name="descripcion" type="text" class="form-control" placeholder="Fecha Nacimiento Usuario" aria-describedby="addon-wrapping" >
                                    </div>
                                </div>
                            </div>
                            <div class="col-12">
                                <button type="submit" id="add-usuario-admin-button" class="btn btn-primary">
                                    <i class="fas fa-save"></i>Agregar Usuario
                                </button>                            
                            </div>
                        </form>
                    </div>
                </div>
                <div class="close2">+</div>
            </div>
        </div>
    </section>
    <section id="editar-usuarios">
        <div class="bg-modal">
            <div class="modal-content2">
                <div class="row">
                    <div class="col-12">
                        <h3><div id="text-action-title-popup">Editar Usuario</div></h3>
                    </div>
                    <div class="col-12">
                        <div class="col-12">
                            <form action="/" method="post">
                                <div class="row">
                                    <div class="col-12">
                                        <div class="input-group flex-nowrap">
                                            <span class="input-group-text" id="addon-wrapping">Rut</span>
                                            <input id="edit_rut_admin" name="rut" type="text" class="form-control" placeholder="Rut Usuario" aria-describedby="addon-wrapping" readonly>
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <div class="input-group flex-nowrap">
                                            <span class="input-group-text" id="addon-wrapping">Nombre</span>
                                            <input id="edit_nombre_admin" name="nombrecompleto" type="text" class="form-control" placeholder="Nombre Usuario" aria-describedby="addon-wrapping">
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <div class="input-group flex-nowrap">
                                            <span class="input-group-text" id="addon-wrapping">Correo Electrónico</span>
                                            <input id="edit_correo_admin" name="correo" type="email" class="form-control" placeholder="Correo Electrónico Usuario" aria-describedby="addon-wrapping">
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <div class="input-group flex-nowrap">
                                            <span class="input-group-text" id="addon-wrapping">Fecha de Naciemiento</span>
                                            <input id="edit_fechanacimiento_admin" name="fechanacimiento" type="date" class="form-control" placeholder="Fecha Nacimiento Usuario" aria-describedby="addon-wrapping" >
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <div class="input-group flex-nowrap">
                                            <span class="input-group-text" id="addon-wrapping">Teléfono</span>
                                            <input id="edit_telefono_admin" name="telefono" type="text" class="form-control" placeholder="Fecha Nacimiento Usuario" aria-describedby="addon-wrapping" >
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <div class="input-group flex-nowrap">
                                            <span class="input-group-text" id="addon-wrapping">Dirección</span>
                                            <input id="edit_direccion_admin" name="direccion" type="text" class="form-control" placeholder="Fecha Nacimiento Usuario" aria-describedby="addon-wrapping" >
                                        </div>
                                    </div>
                                    <div class="col-12"> <!--que diferencia tiene ubicacion con direccion-->
                                        <div class="input-group flex-nowrap">
                                            <span class="input-group-text" id="addon-wrapping">Ubicación</span>
                                            <input id="edit_ubicacion_admin" name="ubicacion" type="text" class="form-control" placeholder="Fecha Nacimiento Usuario" aria-describedby="addon-wrapping" >
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <div class="input-group flex-nowrap">
                                            <span class="input-group-text" id="addon-wrapping">Descripción</span>
                                            <input id="edit_descripcion_admin" name="descripcion" type="text" class="form-control" placeholder="Fecha Nacimiento Usuario" aria-describedby="addon-wrapping" >
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <div class="input-group flex-nowrap">
                                            <span class="input-group-text" id="addon-wrapping">Tipo de Usuario</span>
                                            <select id="add_tipo_admin" name="tipo" type="text" class="form-control" placeholder="Tipo de Usuario" aria-describedby="addon-wrapping">
                                                <option>Dueno</option>
                                                <option>Veterinario</option>
                                                <option>Institución</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <button type="submit" id="edit-usuario-admin-button" class=" btn btn-primary">
                                        <i class="far fa-save"></i>Guardar
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="close">+</div>
            </div>
        </div>
    </section>

    <script>
        document.querySelector(".close").addEventListener("click",
        function(){
            document.querySelector('.bg-modal').style.display = "none";
        });

        document.querySelector(".close2").addEventListener("click",
        function(){
            document.querySelector('.bg-modal2').style.display = "none";
            document.getElementById("add_rut_admin").value = ""
            document.getElementById("add_nombre_admin").value = ""
            document.getElementById("add_correo_admin").value = ""
            document.getElementById("add_telefono_admin").value = ""
            document.getElementById("add_direccion_admin").value = ""
            document.getElementById("add_ubicacion_admin").value = ""
            document.getElementById("add_descripcion_admin").value = ""
        });
    </script>

</body>

</html>