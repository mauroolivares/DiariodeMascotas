</head>

<body>
    <section id="title">
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container-fluid">
                <a class="navbar-brand" href="#">Diario de Mascotas</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                  <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="/profile">Inicio</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link active dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                        Opciones
                      </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <li><a class="dropdown-item" href="/profile">Mis Datos</a></li>
                                <li><a class="dropdown-item" href="/profile/pets">Mis Mascotas</a></li>
                                <li><a class="dropdown-item" href="/profile/controls">Manejar Controles</a></li>
                                <li><a class="dropdown-item" href="/profile/adopt">Adoptar Mascota</a></li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" active href="/">Cerrar Sesión</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </section>
    <section id="content">
        <div class="container-fluid">
            <div class="row white-box-transparent">
                <div class="col-12">
                    <!--Nombre usuario-->
                    <div class="row name-viewer-home">
                        <div id=nombreUsuario class="col-6"></div>
                        <!-- aca abro un script y agrego el nombre del usuario-->
                        <h3>Mis Datos</h3>
                    </div>

                    <!--perfil del usuario-->
                    <div class="col-12">
                        <form action="/info-usuario" method="post">
                            <div class="row">
                                <div class="col-12">
                                    <div class="input-group flex-nowrap">
                                        <span class="input-group-text placeholder col-3" id="addon-wrapping">Nombre Completo</span>
                                        <input id="view_nombre" name="nombrecompleto" type="text" class="form-control" placeholder="Nombre Usuario" aria-describedby="addon-wrapping" readonly>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="input-group flex-nowrap">
                                        <span class="input-group-text placeholder col-3" id="addon-wrapping">Rut</span>
                                        <input id="view_rut" name="rut" type="text" class="form-control" placeholder="Rut Usuario" aria-describedby="addon-wrapping" readonly>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="input-group flex-nowrap">
                                        <span class="input-group-text placeholder col-3" id="addon-wrapping">Correo Electrónico</span>
                                        <input id="view_correo" name="correo" type="email" class="form-control" placeholder="Correo Electrónico Usuario" aria-describedby="addon-wrapping" readonly>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="input-group flex-nowrap">
                                        <span class="input-group-text placeholder col-3" id="addon-wrapping">Fecha de Nacimiento</span>
                                        <input id="view_fechanacimiento" name="fechanacimiento" type="date" class="form-control" placeholder="Fecha de Nacimiento Usuario" aria-describedby="addon-wrapping" readonly>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="input-group flex-nowrap">
                                        <span class="input-group-text placeholder col-3" id="addon-wrapping">Teléfono</span>
                                        <input id="view_telefono" name="telefono" type="text" class="form-control" placeholder="Teléfono Usuario" aria-describedby="addon-wrapping" readonly>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="input-group flex-nowrap">
                                        <span class="input-group-text placeholder col-3" id="addon-wrapping">Dirección</span>
                                        <input id="view_direccion" name="direccion" type="text" class="form-control" placeholder="Dirección Usuario" aria-describedby="addon-wrapping" readonly>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="input-group flex-nowrap">
                                        <span class="input-group-text placeholder col-3" id="addon-wrapping">Región</span>
                                        <input id="view_ubicacion" name="ubicacion" type="text" class="form-control" placeholder="Región de procedencia" aria-describedby="addon-wrapping" readonly>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="input-group flex-nowrap">
                                        <span class="input-group-text placeholder col-3" id="addon-wrapping">Descripción</span>
                                        <input id="view_descripcion" name="descripcion" type="text" class="form-control" placeholder="Descripción Usuario" aria-describedby="addon-wrapping" readonly>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="input-group flex-nowrap">
                                        <span class="input-group-text placeholder col-3" id="addon-wrapping">Estado</span>
                                        <input id="view_estado" name="estado" type="text" class="form-control" placeholder="Estado" aria-describedby="addon-wrapping" readonly>
                                    </div>
                                </div>
                            </div>

                            <div class="col-12" style="padding-top: 5px;">
                                <button type="button" id="edit-usuario-button" class=" btn btn-primary">
                                        <i class="far fa-edit"></i> Editar
                                    </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!--Editar datos usuario-->
    <div class="bg-modal">
        <div class="modal-content2">
            <div class="row">
                <div class="col-12">
                    <h3>
                        <div id="text-action-title-popup">Editar Usuario</div>
                    </h3>
                </div>
                <div class="col-12">
                    <div class="col-12">
                        <form action="/profile/editUser" method="post">
                            <div class="row">
                                <div class="col-12">
                                    <div class="input-group flex-nowrap">
                                        <span class="input-group-text placeholder col-3" id="addon-wrapping">Rut</span>
                                        <input id="edit_rut_user" name="rut" type="text" class="form-control" placeholder="Rut Usuario" aria-describedby="addon-wrapping" readonly>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="input-group flex-nowrap">
                                        <span class="input-group-text placeholder col-3" id="addon-wrapping">Nombre</span>
                                        <input id="edit_nombre_user" name="nombrecompleto" type="text" class="form-control" placeholder="Nombre Completo" aria-describedby="addon-wrapping">
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="input-group flex-nowrap">
                                        <span class="input-group-text placeholder col-3" id="addon-wrapping">Correo Electrónico</span>
                                        <input id="edit_correo_user" name="correo" type="email" class="form-control" placeholder="Correo Electrónico" aria-describedby="addon-wrapping">
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="input-group flex-nowrap">
                                        <span class="input-group-text placeholder col-3" id="addon-wrapping">Fecha de Naciemiento</span>
                                        <input id="edit_fechanacimiento_user" name="fechanacimiento" type="date" class="form-control" placeholder="Fecha Nacimiento" aria-describedby="addon-wrapping">
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="input-group flex-nowrap">
                                        <span class="input-group-text placeholder col-3" id="addon-wrapping">Teléfono</span>
                                        <input id="edit_telefono_user" name="telefono" type="text" class="form-control" placeholder="Teléfono" aria-describedby="addon-wrapping">
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="input-group flex-nowrap">
                                        <span class="input-group-text placeholder col-3" id="addon-wrapping">Dirección</span>
                                        <input id="edit_direccion_user" name="direccion" type="text" class="form-control" placeholder="Dirección" aria-describedby="addon-wrapping">
                                    </div>
                                </div>
                                <div class="col-12">
                                    <!--que diferencia tiene ubicacion con direccion-->
                                    <div class="input-group flex-nowrap">
                                        <span class="input-group-text placeholder col-3" id="addon-wrapping">Región</span>
                                        <input id="edit_ubicacion_user" name="ubicacion" type="text" class="form-control" placeholder="Región de procedencia" aria-describedby="addon-wrapping">
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="input-group flex-nowrap">
                                        <span class="input-group-text placeholder col-3" id="addon-wrapping">Descripción</span>
                                        <input id="edit_descripcion_user" name="descripcion" type="text" class="form-control" placeholder="Descripción" aria-describedby="addon-wrapping">
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="input-group flex-nowrap">
                                        <span class="input-group-text placeholder col-3" id="addon-wrapping">Descripción</span>
                                        <input id="edit_estado_user" name="estado" type="text" class="form-control" placeholder="Estado" aria-describedby="addon-wrapping">
                                    </div>
                                </div>
                            </div>
                            <div class="col-12">
                                <button type="submit" id="edit-usuario-popup-button" class=" btn btn-primary">
                                    <i class="far fa-save"></i> Guardar
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <div class="close">+</div>
        </div>
    </div>
    <script>
        const duenoInfo = <%-JSON.stringify(dueno)%>;

        function getUserInfo(duenoInfo) {
            document.getElementById("view_rut").value = duenoInfo.rut
            document.getElementById("view_nombre").value = duenoInfo.nombrecompleto
            document.getElementById("view_correo").value = duenoInfo.correo
            document.getElementById("view_fechanacimiento").value = duenoInfo.fechanacimiento
            document.getElementById("view_telefono").value = duenoInfo.telefono
            document.getElementById("view_direccion").value = duenoInfo.direccion
            document.getElementById("view_ubicacion").value = duenoInfo.ubicacion
            document.getElementById("view_descripcion").value = duenoInfo.descripcion
            document.getElementById("view_estado").value = duenoInfo.estado
        }
        getUserInfo(duenoInfo);

        //Cuando se haga click al boton editar
        document.getElementById("edit-usuario-button").addEventListener("click",
            function() {
                document.getElementById('edit_rut_user').value = duenoInfo.rut;
                document.getElementById('edit_nombre_user').value = duenoInfo.nombrecompleto;
                document.getElementById('edit_correo_user').value = duenoInfo.correo;
                document.getElementById('edit_fechanacimiento_user').value = duenoInfo.fechanacimiento;
                document.getElementById('edit_telefono_user').value = duenoInfo.telefono;
                document.getElementById('edit_direccion_user').value = duenoInfo.direccion;
                document.getElementById('edit_ubicacion_user').value = duenoInfo.ubicacion;
                document.getElementById('edit_descripcion_user').value = duenoInfo.descripcion;
                document.getElementById('edit_estado_user').value = duenoInfo.estado;
                //Activando panel de editar
                document.querySelector(".bg-modal").style.display = "flex";
            }); //activar panel
        document.querySelector(".close").addEventListener("click",
            function() {
                document.querySelector('.bg-modal').style.display = "none";
            });
    </script>
</body>

</html>