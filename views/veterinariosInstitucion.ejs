<!DOCTYPE html>
<html>

<head>
    <title>Diario de Mascotas</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- CSS Sytlesheets -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <link rel="stylesheet" href="../styles.css">
    <!--Bootstrap -->
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous">
    </script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.6.0/dist/umd/popper.min.js" integrity="sha384-KsvD1yqQ1/1+IA7gi3P0tyJcT3vR+NdBTt13hSJ2lnve8agRGXTTyNaBYmCR/Nwi" crossorigin="anonymous">
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.min.js" integrity="sha384-nsg8ua9HAw1y0W1btsyWgBklPnCUAFLuTMS2G72MMONqmOymq585AcH49TLBQObG" crossorigin="anonymous">
    </script>
    <!-- Font Awesome -->
    <script src="https://kit.fontawesome.com/d82979872c.js" crossorigin="anonymous"></script>
    <!-- Font Google Lora -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Lora:wght@700&display=swap" rel="stylesheet">
</head>

<body>
    <section id="title">
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container-fluid">
                <a class="navbar-brand" href="/#">Diario de Mascotas</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                                <span class="navbar-toggler-icon"></span>
                            </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="/instit">Inicio</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link active dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                          Opciones
                                        </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <li><a class="dropdown-item" href="/instit">Datos Institución</a></li>
                                <li><a class="dropdown-item" href="/instit/vets">Veterinarios</a></li>
                                <li><a class="dropdown-item" href="/instit/pets">Mascotas</a></li>
                                <li><a class="dropdown-item" href="/#">Adopción</a></li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" active href="/#">Cerrar Sesion</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </section>
    <section id="content">
        <div class="container-fluid">
            <div class="row white-box-transparent">
                <div class="col-12">
                    <!--Nombre usuario-->
                    <div class="row name-viewer-home">
                        <div id="nombreUsuario" class="col-6"></div>
                        <h3>Veterinarios</h3>
                    </div>
                    <!-- boton agregar control-->
                    <div class="col-12 text-right">
                        <div class="top-user-info">
                            <button id="agregar-control-button" type="button" class="btn btn-primary">Agregar Veterinario
                                    <i class="fas fa-plus"></i>
                                </button>
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="table-responsive">
                            <table id="tabla-controles" class="table table-lifht table-bordered table-hover table-striped">
                                <thead class="bg-dark text-white">
                                    <th scope="row">Rut</th>
                                    <th scope="row">Nombre</th>
                                    <th scope="row">Especialidad</th>
                                    <th scope="row">Correo Electrónico</th>
                                    <th scope="row">Más Detalles</th>
                                </thead>
                                <tbody id="tBody-vet-instit"></tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="bg-modal">
            <div class="modal-content2">
                <div class="row">
                    <div class="col-12">
                        <h3>
                            <div id="text-action-title-popup">Perfil Mascota</div>
                        </h3>
                    </div>
                    <div class="col-12">
                        <form action="/ver-mascota-usuario" method="post">
                            <div class="row">
                                <div class="col-12">
                                    <div class="input-group flex-nowrap">
                                        <span class="input-group-text placeholder col-3" id="addon-wrapping">RUT</span>
                                        <input id="view_rut" name="rut" type="text" class="form-control" aria-label="nombre_mascota_add" aria-describedby="addon-wrapping" readonly>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="input-group flex-nowrap">
                                        <span class="input-group-text placeholder col-3" id="addon-wrapping">Nombre</span>
                                        <input id="view_nombre" name="nombrecompleto" type="text" class="form-control" aria-label="especie_mascota_add" aria-describedby="addon-wrapping" readonly>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="input-group flex-nowrap">
                                        <span class="input-group-text placeholder col-3" id="addon-wrapping">Descripcion</span>
                                        <input id="view_descripcion" name="descripcion" type="text" class="form-control" aria-label="raza_mascota_add" aria-describedby="addon-wrapping" readonly>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="input-group flex-nowrap">
                                        <span class="input-group-text placeholder col-3" id="addon-wrapping">Telefono</span>
                                        <input id="view_telefono" name="telefono" type="text" class="form-control" aria-label="raza_mascota_add" aria-describedby="addon-wrapping" readonly>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="input-group flex-nowrap">
                                        <span class="input-group-text placeholder col-3" id="addon-wrapping">Fecha de Nacimiento</span>
                                        <input id="view_fechanacimiento" name="fechanacimiento" type="text" class="form-control" aria-label="fnacimiento_mascota_add" aria-describedby="addon-wrapping" readonly>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="input-group flex-nowrap">
                                        <span class="input-group-text placeholder col-3" id="addon-wrapping">Especialidad</span>
                                        <input id="view_especialidad" name="especialidad" type="text" class="form-control" aria-label="chip_mascota_add" aria-describedby="addon-wrapping" readonly>
                                    </div>
                                </div>
                        </form>
                        </div>
                    </div>
                    <div class="close">+</div>
                </div>
            </div>
    </section>
    <script>
        const vets = <%-JSON.stringify(veterinarios)%>;
        console.log(vets)

        function FillPageWithVets(vets) {
            let tBodyVeterinario = document.getElementById("tBody-vet-instit"); //Obten la tabla

            for (let i = 0; i < vets.length; i++) {
                const rutVet = vets[i].rut;
                const nombreVet = vets[i].nombrecompleto;
                const especialidadVet = vets[i].veterinarios[0].especialidad;
                const correoVet = vets[i].correo;

                let newVetRow = tBodyVeterinario.insertRow(-1);
                let newRutColRef = newVetRow.insertCell(-1);
                let newNombreVet = newVetRow.insertCell(-1);
                let newEspecialidadColRef = newVetRow.insertCell(-1);
                let newCorreoColRef = newVetRow.insertCell(-1);
                let newVerMasColRef = newVetRow.insertCell(-1);

                //Asigna los valores a cada columna
                newRutColRef.textContent = rutVet;
                newNombreVet.textContent = nombreVet;
                newEspecialidadColRef.textContent = especialidadVet;
                newCorreoColRef.textContent = correoVet;
                newVerMasColRef.innerHTML = '<button type="button" id=button-edit-' + i + ' onClick="verVet(this.id);" class="btn btn-primary pull-right"><i class="fas fa-edit"></i>Ver Más</button>'
            }
        }
        FillPageWithVets(vets);

        function verVet(pet1) {
            document.querySelector(".bg-modal").style.display = "flex";
            var pet2 = pet1.split("-");
            document.getElementById('view_rut').value = vets[(parseInt(pet2[2]))].rut;
            document.getElementById('view_nombre').value = vets[(parseInt(pet2[2]))].nombrecompleto;
            document.getElementById('view_descripcion').value = vets[(parseInt(pet2[2]))].descripcion;
            document.getElementById('view_telefono').value = vets[(parseInt(pet2[2]))].telefono;
            document.getElementById('view_fechanacimiento').value = vets[(parseInt(pet2[2]))].fechanacimiento;
            document.getElementById('view_especialidad').value = vets[(parseInt(pet2[2]))].veterinarios[0].especialidad;
        }
        document.querySelector(".close").addEventListener("click",
            function() {
                document.querySelector('.bg-modal').style.display = "none";
            });
    </script>
</body>

</html>