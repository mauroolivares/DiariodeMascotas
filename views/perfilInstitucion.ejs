                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </section>
    <section id="content">
        <div class="container-fluid">
            <div class="row white-box-transparent">
                <div class="col-12">
                    <!--Nombre usuario-->
                    <div class="row name-viewer-home">
                        <div id=nombreUsuario class="col-6"></div>
                        <!-- aca abro un script y agrego el nombre del usuario-->
                        <h3>Datos Institución</h3>
                    </div>

                    <!--perfil del usuario-->
                    <div class="col-12">
                        <form action="/info-institucion" method="post">
                            <div class="row">
                                <div class="col-12">
                                    <div class="input-group flex-nowrap">
                                        <span class="input-group-text placeholder col-3" id="addon-wrapping">Nombre Completo</span>
                                        <input id="view_nombre" name="nombrecompleto" type="text" class="form-control" placeholder="Nombre completo" aria-describedby="addon-wrapping" readonly>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="input-group flex-nowrap">
                                        <span class="input-group-text placeholder col-3" id="addon-wrapping">Rut</span>
                                        <input id="view_rut" name="rut" type="text" class="form-control" placeholder="Rut" aria-describedby="addon-wrapping" readonly>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="input-group flex-nowrap">
                                        <span class="input-group-text placeholder col-3" id="addon-wrapping">Correo Electrónico</span>
                                        <input id="view_correo" name="correo" type="email" class="form-control" placeholder="Correo electrónico" aria-describedby="addon-wrapping" readonly>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="input-group flex-nowrap">
                                        <span class="input-group-text placeholder col-3" id="addon-wrapping">Fecha de Nacimiento</span>
                                        <input id="view_fechanacimiento" name="fechanacimiento" type="date" class="form-control" placeholder="Fecha de nacimiento" aria-describedby="addon-wrapping" readonly>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="input-group flex-nowrap">
                                        <span class="input-group-text placeholder col-3" id="addon-wrapping">Teléfono</span>
                                        <input id="view_telefono" name="telefono" type="text" class="form-control" placeholder="9XXXXXXXX" aria-describedby="addon-wrapping" readonly>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="input-group flex-nowrap">
                                        <span class="input-group-text placeholder col-3" id="addon-wrapping">Dirección</span>
                                        <input id="view_direccion" name="direccion" type="text" class="form-control" placeholder="Dirección" aria-describedby="addon-wrapping" readonly>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="input-group flex-nowrap">
                                        <span class="input-group-text placeholder col-3" id="addon-wrapping">Región</span>
                                        <input id="view_ubicacion" name="ubicacion" type="text" class="form-control" placeholder="Región de procedencia" aria-describedby="addon-wrapping" readonly>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="input-group flex-nowrap">
                                        <span class="input-group-text placeholder col-3" id="addon-wrapping">Descripción</span>
                                        <input id="view_descripcion" name="descripcion" type="text" class="form-control" placeholder="Agrege una descripción" aria-describedby="addon-wrapping" readonly>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="input-group flex-nowrap">
                                        <span class="input-group-text placeholder col-3" id="addon-wrapping">Área</span>
                                        <input id="view_area" name="area" type="text" class="form-control" placeholder="Área Institución" aria-describedby="addon-wrapping" readonly>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="input-group flex-nowrap">
                                        <span class="input-group-text placeholder col-3" id="addon-wrapping">Total funcionarios</span>
                                        <input id="view_totalfunc" name="totalfunc" type="text" class="form-control" placeholder="Total funcionarios" aria-describedby="addon-wrapping" readonly>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="input-group flex-nowrap">
                                        <span class="input-group-text placeholder col-3" id="addon-wrapping">Vacantes disponibles</span>
                                        <input id="view_totalpuestos" name="totalpuestos" type="text" class="form-control" placeholder="Vacantes disponibles" aria-describedby="addon-wrapping" readonly>
                                    </div>
                                </div>
                            </div>
                            <div class="col-12" style="padding-top: 5px;">
                                <button type="button" id="edit-instit-button" class=" btn btn-primary">
                                            <i class="far fa-edit"></i> Editar
                                        </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <div class="bg-modal">
        <div class="modal-content2">
            <div class="row">
                <div class="col-12">
                    <h3>
                        <div id="text-action-title-popup">Editar Institución</div>
                    </h3>
                </div>
                <div class="col-12">
                    <div class="col-12">
                        <form action="/instit/editUser" method="post">
                            <div class="row">
                                <div class="col-12">
                                    <div class="input-group flex-nowrap">
                                        <span class="input-group-text placeholder col-3" id="addon-wrapping">Rut</span>
                                        <input id="edit_rut_instit" name="rut" type="text" class="form-control" placeholder="Rut" aria-describedby="addon-wrapping" readonly>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="input-group flex-nowrap">
                                        <span class="input-group-text placeholder col-3" id="addon-wrapping">Nombre</span>
                                        <input id="edit_nombre_instit" name="nombrecompleto" type="text" class="form-control" placeholder="Nombre Completo" aria-describedby="addon-wrapping">
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="input-group flex-nowrap">
                                        <span class="input-group-text placeholder col-3" id="addon-wrapping">Correo Electrónico</span>
                                        <input id="edit_correo_instit" name="correo" type="email" class="form-control" placeholder="Correo Electrónico" aria-describedby="addon-wrapping">
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="input-group flex-nowrap">
                                        <span class="input-group-text placeholder col-3" id="addon-wrapping">Fecha de creación</span>
                                        <input id="edit_fechanacimiento_instit" name="fechanacimiento" type="date" class="form-control" placeholder="Fecha de creación" aria-describedby="addon-wrapping">
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="input-group flex-nowrap">
                                        <span class="input-group-text placeholder col-3" id="addon-wrapping">Teléfono</span>
                                        <input id="edit_telefono_instit" name="telefono" type="text" class="form-control" placeholder="Teléfono" aria-describedby="addon-wrapping">
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="input-group flex-nowrap">
                                        <span class="input-group-text placeholder col-3" id="addon-wrapping">Dirección</span>
                                        <input id="edit_direccion_instit" name="direccion" type="text" class="form-control" placeholder="Dirección" aria-describedby="addon-wrapping">
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="input-group flex-nowrap">
                                        <span class="input-group-text placeholder col-3" id="addon-wrapping">Región</span>
                                        <input id="edit_ubicacion_instit" name="ubicacion" type="text" class="form-control" placeholder="Región de procedencia" aria-describedby="addon-wrapping">
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="input-group flex-nowrap">
                                        <span class="input-group-text placeholder col-3" id="addon-wrapping">Descripción</span>
                                        <input id="edit_descripcion_instit" name="descripcion" type="text" class="form-control" placeholder="Agrege una descripción" aria-describedby="addon-wrapping">
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="input-group flex-nowrap">
                                        <span class="input-group-text placeholder col-3" id="addon-wrapping">Área</span>
                                        <input id="edit_area_instit" name="area" type="text" class="form-control" placeholder="Área Institución" aria-describedby="addon-wrapping">
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="input-group flex-nowrap">
                                        <span class="input-group-text placeholder col-3" id="addon-wrapping">Total funcionarios</span>
                                        <input id="edit_totalfunc_instit" name="totalfunc" type="text" class="form-control" placeholder="Total funcionarios" aria-describedby="addon-wrapping">
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="input-group flex-nowrap">
                                        <span class="input-group-text placeholder col-3" id="addon-wrapping">Vacantes disponibles</span>
                                        <input id="edit_totalpuestos_instit" name="totalpuestos" type="text" class="form-control" placeholder="Vacantes disponibles" aria-describedby="addon-wrapping">
                                    </div>
                                </div>
                            </div>
                            <div class="col-12">
                                <button type="submit" id="edit-instit-popup-button" class=" btn btn-primary">
                                        <i class="far fa-save"></i> Guardar Cambios
                                    </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <div class="close">+</div>
        </div>
    </div>
    <script>
        const institInfo = <%-JSON.stringify(instit)%>;

        function getInstitInfo(institInfo) {
            document.getElementById("view_rut").value = institInfo.rut
            document.getElementById("view_nombre").value = institInfo.nombrecompleto
            document.getElementById("view_correo").value = institInfo.correo
            document.getElementById("view_fechanacimiento").value = institInfo.fechanacimiento
            document.getElementById("view_telefono").value = institInfo.telefono
            document.getElementById("view_direccion").value = institInfo.direccion
            document.getElementById("view_ubicacion").value = institInfo.ubicacion
            document.getElementById("view_descripcion").value = institInfo.descripcion
            document.getElementById("view_area").value = institInfo.area
            document.getElementById("view_totalfunc").value = institInfo.totalfunc
            document.getElementById("view_totalpuestos").value = institInfo.totalpuestos
        }
        getInstitInfo(institInfo);

        document.getElementById("edit-instit-button").addEventListener("click",
            function() {
                document.getElementById('edit_rut_instit').value = institInfo.rut;
                document.getElementById('edit_nombre_instit').value = institInfo.nombrecompleto;
                document.getElementById('edit_correo_instit').value = institInfo.correo;
                document.getElementById('edit_fechanacimiento_instit').value = institInfo.fechanacimiento;
                document.getElementById('edit_telefono_instit').value = institInfo.telefono;
                document.getElementById('edit_direccion_instit').value = institInfo.direccion;
                document.getElementById('edit_ubicacion_instit').value = institInfo.ubicacion;
                document.getElementById('edit_descripcion_instit').value = institInfo.descripcion;
                document.getElementById('edit_area_instit').value = institInfo.area;
                document.getElementById('edit_totalfunc_instit').value = institInfo.totalfunc;
                document.getElementById('edit_totalpuestos_instit').value = institInfo.totalpuestos;
                //Activando panel de editar
                document.querySelector(".bg-modal").style.display = "flex";
            }); //activar panel
        document.querySelector(".close").addEventListener("click",
            function() {
                document.querySelector('.bg-modal').style.display = "none";
            });
    </script>
</body>

</html>