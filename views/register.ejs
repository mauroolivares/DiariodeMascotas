<!DOCTYPE html>
<html>

<head>
    <title>Creando tu cuenta</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width">
    <!-- CSS Sytlesheets -->
    <link rel="stylesheet" href="login_user.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">

    <!--Bootstrap -->
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous">
    </script>
    <!--<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.6.0/dist/umd/popper.min.js" integrity="sha384-KsvD1yqQ1/1+IA7gi3P0tyJcT3vR+NdBTt13hSJ2lnve8agRGXTTyNaBYmCR/Nwi" crossorigin="anonymous">
        </script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.min.js" integrity="sha384-nsg8ua9HAw1y0W1btsyWgBklPnCUAFLuTMS2G72MMONqmOymq585AcH49TLBQObG" crossorigin="anonymous">
        </script>-->

    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js" integrity="sha384-7+zCNj/IqJ95wo16oMtfsKbZ9ccEh31eOz1HGyDuCQ6wgnyJNSYdrPa03rtR1zdB" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js" integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13" crossorigin="anonymous"></script>


    <!-- Font Awesome -->
    <script src="https://kit.fontawesome.com/d82979872c.js" crossorigin="anonymous"></script>
    <!-- Font Google 1 Squada One -->
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Squada+One&display=swap" rel="stylesheet">
</head>

<body>
    <div class="container">
        <div class="row">
            <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
                <div class="card border-0 shadow rounded-3 my-5">
                    <div class="card-body p-4 p-sm-5">
                        <h5 class="card-title text-center mb-5 fw-light fs-5">Registra tus datos</h5>
                        <div class="modal-content2">
                            <div class="row">
                                <div class="col-12">
                                    <form action="/signin" method="post">
                                        <div class="row">
                                            <div class="col-12">
                                                <div class="input-group flex-nowrap">
                                                    <span class="input-group-text" id="addon-wrapping">Nombre</span>
                                                    <input id=nombre name="name" type="text" class="form-control" placeholder="Nombre Usuario" aria-label="nombre_user_add" aria-describedby="addon-wrapping required">
                                                </div>
                                            </div>
                                            <div class="col-12">
                                                <div class="input-group flex-nowrap">
                                                    <span class="input-group-text" id="addon-wrapping">Apellido</span>
                                                    <input id=apellido name="lastname" type="text" class="form-control" placeholder="Apellido Usuario" aria-label="apellido_user_add" aria-describedby="addon-wrapping">
                                                    <input id=nombrecompleto name="nombrecompleto" type="text" class="form-control" placeholder="Apellido Usuario" aria-label="apellido_user_add" aria-describedby="addon-wrapping" hidden>
                                                </div>
                                            </div>
                                            <div class="col-12">
                                                <div class="input-group flex-nowrap">
                                                    <span class="input-group-text" id="addon-wrapping">Rut</span>
                                                    <input id=rut name="rut" type="text" class="form-control" placeholder="Rut Usuario" aria-label="rut_user_add" aria-describedby="addon-wrapping" required>
                                                </div>
                                            </div>
                                            <div class="col-12">
                                                <div class="input-group flex-nowrap">
                                                    <span class="input-group-text" id="addon-wrapping">Fecha de Nacimiento</span>
                                                    <input id=nfechanacimiento name="fechanacimiento" type="text" class="form-control" placeholder="Fecha de Nacimiento" aria-label="nacimiento_user_add" aria-describedby="addon-wrapping" required>
                                                </div>
                                            </div>
                                            <div class="col-12">
                                                <div class="input-group flex-nowrap">
                                                    <span class="input-group-text" id="addon-wrapping">Dirección</span>
                                                    <input id=direccion name="direccion" type="text" class="form-control" placeholder="Dirección" aria-label="direccion_user_add" aria-describedby="addon-wrapping" required>
                                                </div>
                                            </div>
                                            <div class="col-12">
                                                <div class="input-group flex-nowrap">
                                                    <span class="input-group-text" id="addon-wrapping">Teléfono</span>
                                                    <input id=telefono name="telefono" type="text" class="form-control" placeholder="Telefono de contacto" aria-label="telefono_user_add" aria-describedby="addon-wrapping" required>
                                                </div>
                                            </div>
                                            <div class="col-12">
                                                <div class="input-group flex-nowrap">
                                                    <span class="input-group-text" id="addon-wrapping">Correo electrónico</span>
                                                    <input id=correo name="correo" type="text" class="form-control" placeholder="Correo electronico" aria-label="mail_user_add" aria-describedby="addon-wrapping" required>
                                                </div>
                                            </div>
                                            <div class="col-12">
                                                <div class="input-group flex-nowrap">
                                                    <span class="input-group-text" id="addon-wrapping">Contraseña</span>
                                                    <input id=password name="password" type="password" class="form-control" placeholder="Contraseña Usuario" aria-label="contraseña_user_add" aria-describedby="addon-wrapping" required>
                                                </div>
                                            </div>
                                            <div class="col-12">
                                                <div class="input-group flex-nowrap">
                                                    <span class="input-group-text" id="addon-wrapping">Repite Contraseña</span>
                                                    <input type="password" placeholder="Repite contraseña" name="passwordr" id="psw-repeat" required aria-label="contraseña_user_add" aria-describedby="addon-wrapping">
                                                </div>
                                            </div>
                                            <div class="col-12">
                                                <div class="input-group flex-nowrap">
                                                    <span class="input-group-text" id="addon-wrapping">Descripción</span>
                                                    <input id=descripcion name="descripcion" type="text" class="form-control" placeholder="Descripción" aria-label="descripcion_user_add" aria-describedby="addon-wrapping" required>
                                                </div>
                                            </div>
                                            <div class="col-12">
                                                <div class="input-group flex-nowrap">
                                                    <span class="input-group-text" id="addon-wrapping">Tipo Usuario</span>
                                                    <select name="tipo" id="tipo_usuario_input_popup" onclick='revisarTipoNewUser();' class="form-select" aria-label="Estado activacion">
                                                        <option >Veterinario</option>
                                                        <option >Dueño</option>
                                                    </select>
                                                </div>
                                                <div class="col-12">
                                                    <div class="new_user_especialidad_text input-group flex-nowrap">
                                                        <span class="input-group-text" id="addon-wrapping">Especialidad</span>
                                                        <input id=especialidad_vet_input_popup name="especialidad" type="text" class="form-control" placeholder="Especialidad" aria-label="Rol" aria-describedby="addon-wrapping">
                                                    </div>
                                                </div>
                                                <div class="col-12">
                                                    <div class="new_user_estado_text input-group flex-nowrap">
                                                        <span class="input-group-text" id="addon-wrapping">Estado</span>
                                                        <input id=estado_dueno_input_popup name="estado" type="text" class="form-control" placeholder="Estado" aria-label="Rol" aria-describedby="addon-wrapping">
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="d-grid">
                                            <button class="btn btn-primary btn-login text-uppercase fw-bold" type="submit">Ingresar</button>
                                        </div>
                                        <hr class="my-4">
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>


    <script>
        document.getElementById("tipo_usuario_input_popup").selectedIndex = 1;
        document.querySelector('.new_user_especialidad_text').style.display = "none";

        function revisarTipoNewUser() {

            switch (document.getElementById('tipo_usuario_input_popup').value) {
                case "Veterinario":
                    document.querySelector('.new_user_especialidad_text').style.display = "flex";
                    document.querySelector('.new_user_estado_text').style.display = "none";
                    break;
                case "Dueño":
                    document.querySelector('.new_user_estado_text').style.display = "flex";
                    document.querySelector('.new_user_especialidad_text').style.display = "none";
                    break;
            }
        }
        nombre = document.getElementById('name')
        apellido = document.getElementById('lastname')
        document.getElementById('nombrecompleto').innerHTML = nombre + " " + apellido
    </script>

</html>