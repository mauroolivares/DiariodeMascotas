<!DOCTYPE html>
<html>

<head>
    <title>Creando tu cuenta</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width">
    <!-- CSS Sytlesheets -->
    <link rel="stylesheet" href="login_user.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">

    <!--Bootstrap -->
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous">
    </script>
    <!--<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.6.0/dist/umd/popper.min.js" integrity="sha384-KsvD1yqQ1/1+IA7gi3P0tyJcT3vR+NdBTt13hSJ2lnve8agRGXTTyNaBYmCR/Nwi" crossorigin="anonymous">
        </script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.min.js" integrity="sha384-nsg8ua9HAw1y0W1btsyWgBklPnCUAFLuTMS2G72MMONqmOymq585AcH49TLBQObG" crossorigin="anonymous">
        </script>-->

    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js" integrity="sha384-7+zCNj/IqJ95wo16oMtfsKbZ9ccEh31eOz1HGyDuCQ6wgnyJNSYdrPa03rtR1zdB" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js" integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13" crossorigin="anonymous"></script>

    <!-- Font Awesome -->
    <script src="https://kit.fontawesome.com/d82979872c.js" crossorigin="anonymous"></script>
    <!-- Font Google Lora -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Lora:wght@700&display=swap" rel="stylesheet">
</head>

<body>
    <div class="container">
        <div class="row">
            <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
                <div class="card border-0 shadow rounded-3 my-5">
                    <div class="card-body p-4 p-sm-5">
                        <h5 class="card-title text-center mb-5 fw-light fs-5">Registra tus datos</h5>
                        <div class="modal-content2">
                            <div class="row">
                                <div class="col-12">
                                    <form action="/signin" method="post">
                                        <div class="form-group row">                                           
                                            <label for="nombre" class="col-sm-4 col-form-label">Nombre</label>
                                            <div class="col-sm-8">
                                                <input id=nombre name="name" type="text" class="form-control" placeholder="Nombre Usuario" required>
                                            </div>
                                        </div>                                                                                                       
                                        <div class="form-group row">
                                            <label for ="apellido" class="col-sm-4 col-form-label">Apellido</label>
                                            <div class="col-sm-8">
                                                <input id=apellido name="lastname" type="text" class="form-control" placeholder="Apellido Usuario" >
                                                <input id=nombrecompleto name="nombrecompleto" type="text" class="form-control" placeholder="Apellido Usuario" hidden>
                                            </div>                         
                                        </div>
                                        <div class="form-group row">
                                            <label for ="rut" class="col-sm-4 col-form-label">Rut</label>
                                            <div class="col-sm-8">
                                                <input id=rut name="rut" type="text" class="form-control" placeholder="Rut Usuario" required>
                                            </div>                                                                                                  
                                        </div>
                                        <div class="form-group row">
                                            <label for="nfechanacimiento"class="col-sm-4 col-form-label" >Fecha de Nacimiento</label>
                                            <div class="col-sm-8">
                                                <input id=nfechanacimiento name="fechanacimiento" type="text" class="form-control" placeholder="Fecha de Nacimiento" required>
                                            </div>                                                                                                    
                                        </div>
                                        <div class="form-group row">
                                            <label for ="direccion" class="col-sm-4 col-form-label" >Dirección</label>
                                            <div class="col-sm-8">
                                                <input id=direccion name="direccion" type="text" class="form-control" placeholder="Dirección" required>
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label for ="telefono" class="col-sm-4 col-form-label" >Teléfono</label>
                                            <div class="col-sm-8">
                                                <input id=telefono name="telefono" type="text" class="form-control" placeholder="Telefono de contacto" required>
                                            </div>                                                                           
                                        </div>
                                        <div class="form-group row">
                                            <label for ="correo" class="col-sm-4 col-form-label">Correo electrónico</label>
                                            <div class="col-sm-8">
                                                <input id=correo name="correo" type="text" class="form-control" placeholder="Correo electronico" required>
                                            </div>                                    
                                        </div>
                                        <div class="form-group row">
                                            <label for ="password" class="col-sm-4 col-form-label">Contraseña</label>
                                            <div class="col-sm-8">
                                                <input id=password name="password" type="password" class="form-control" placeholder="Contraseña Usuario" required>
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label for ="password" class="col-sm-4 col-form-label">Repite Contraseña</label>
                                            <div class="col-sm-8">
                                                <input type="password" placeholder="Repite contraseña" name="passwordr" id="psw-repeat" required >
                                            </div> 
                                        </div>
                                        <div class="form-group row">
                                            <label for ="descripcion" class="col-sm-4 col-form-label">Descripción</label>
                                            <div class="col-sm-8">
                                                <input id=descripcion name="descripcion" type="text" class="form-control" placeholder="Descripción" required>
                                            </div>                     
                                        </div>
                                        <div class="form-group row">
                                            <label for ="tipo_usuario_input_popup" class="col-sm-4 col-form-label">Tipo Usuario</label>
                                            <div class="col-sm-8">
                                                <select name="tipo" id="tipo_usuario_input_popup" onclick='revisarTipoNewUser();' class="form-select" aria-label="Estado activacion">
                                                    <option >Veterinario</option>
                                                    <option >Dueño</option>
                                                </select>
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <div class="new_user_especialidad_text">
                                                <label for ="especialidad_vet_input_popup" class="col-sm-4 col-form-label">Especialidad</label>
                                                <div class="col-sm-8">
                                                    <input id=especialidad_vet_input_popup name="especialidad" type="text" class="form-control" placeholder="Especialidad" aria-label="Rol" aria-describedby="addon-wrapping">
                                                </div>
                                            </div>                                                                   
                                        </div>
                                        <div class="form-group row ">
                                            <div class="new_user_estado_text">
                                                <label for ="estado_dueno_input_popup" class="col-sm-4 col-form-label">Estado</label>
                                                <div class="col-sm-8">
                                                    <input id=estado_dueno_input_popup name="estado" type="text" class="form-control" placeholder="Estado" aria-label="Rol" aria-describedby="addon-wrapping">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="d-grid">
                                            <div class="row">
                                                <div class="col">
                                                    <button class="btn btn-primary btn-login text-uppercase fw-bold" type="submit">Ingresar</button>
                                                </div>
                                                <div class="col">
                                                    <a class="btn btn-primary btn-login text-uppercase fw-bold" href="/#" role="button">Cancelar</a>
                                                </div>
                                            </div>          
                                        </div>
                                        <hr class="my-4">
                                    </form>
                                    <div style="text-align: center;">
                                        <img src="images/diario.PNG" alt="" width="225px" height="225px"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script>
        document.getElementById("tipo_usuario_input_popup").selectedIndex = 1;
        document.querySelector('.new_user_especialidad_text').style.display = "none";

        function revisarTipoNewUser() {

            switch (document.getElementById('tipo_usuario_input_popup').value) {
                case "Veterinario":
                    document.querySelector('.new_user_especialidad_text').style.display = "flex";
                    document.querySelector('.new_user_estado_text').style.display = "none";
                    break;
                case "Dueño":
                    document.querySelector('.new_user_estado_text').style.display = "flex";
                    document.querySelector('.new_user_especialidad_text').style.display = "none";
                    break;
            }
        }
        nombre = document.getElementById('name')
        apellido = document.getElementById('lastname')
        document.getElementById('nombrecompleto').innerHTML = nombre + " " + apellido
    </script>
</body>
</html>